@model List<DEPI_Library.Models.Category>

@{
    ViewData["Title"] = "Categories";
}

<div class="container mt-4">
    <h2 class="text-info">📂 All Categories</h2>
    <table class="table table-hover mt-4">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>View Books</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Name</td>
                    <td>
                        <a class="btn btn-outline-primary btn-sm" asp-action="BooksByCategory" asp-route-id="@category.CategoryId">📖 View Books</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
