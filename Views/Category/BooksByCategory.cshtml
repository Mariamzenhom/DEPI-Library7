@model DEPI_Library.Models.Category

@{
    ViewData["Title"] = "Books in " + Model.Name;
}

<div class="container mt-4">
    <h2 class="text-primary">📚 Books in @Model.Name</h2>

    @if (Model.Books != null && Model.Books.Any())
    {
        <table class="table table-bordered mt-4">
            <thead class="table-dark">
                <tr>
                    <th>Title</th>
                    <th>Author</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var book in Model.Books)
                {
                    <tr>
                        <td>@book.Title</td>
                        <td>@book.Author</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-warning mt-4">No books found in this category.</div>
    }
</div>
