@model DEPI_Library.Models.Book

@{
    ViewData["Title"] = "Create Book";
}

<div class="container mt-5">
    <h2 class="text-primary">📚 Add New Book</h2>
    <form asp-action="Create" method="post" class="mt-4">
        <div class="mb-3">
            <label for="Title" class="form-label">Book Title</label>
            <input type="text" class="form-control" id="Title" name="Title" required />
        </div>

        <div class="mb-3">
            <label for="Author" class="form-label">Author</label>
            <input type="text" class="form-control" id="Author" name="Author" required />
        </div>

        <div class="mb-3">
            <label for="CategoryId" class="form-label">Category</label>
            @Html.DropDownListFor(
                     model => model.CategoryId,
                     (IEnumerable<SelectListItem>)ViewBag.Categories,
                     "Select Category",
                     new { @class = "form-select", required = "required" }
                     )
        </div>

        <button type="submit" class="btn btn-lg btn-success px-4 py-2 shadow-lg rounded-pill w-100">Save Book</button>
    </form>
</div>
